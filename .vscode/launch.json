{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "discover",
                "-s",
                "src/tests",
                "-p",
                "test_*.py"
            ]
        },
        {
            "name": "Python: Run Pylint",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/pylint.exe",
            "args": [
                "${workspaceFolder}/src/dev_tools"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Run Tests with Coverage",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/coverage.exe",
            "args": [
                "run",
                "-m",
                "unittest",
                "discover",
                "-s",
                "src/tests",
                "-p",
                "test_*.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/dev_tools"
            }
        },
        {
            "name": "Python: Generate Coverage Report",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/coverage.exe",
            "args": [
                "xml"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Generate HTML Coverage Report",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/coverage.exe",  // Adjust path if necessary
            "args": [
                "html"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
