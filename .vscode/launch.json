{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "discover",
                "-s",
                "src/tests",
                "-p",
                "test_*.py"
            ]
        },
        {
            "name": "Python: Test Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: Run Pylint",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/pylint.exe",
            "args": [
                "${workspaceFolder}/src"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
